@model JokeAPPMVC.Models.Joke

@{
    ViewData["Title"] = "Edit";

}

<h1>Edit</h1>

<h4>Joke</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="JokeName" class="control-label"></label>
                <input asp-for="JokeName" class="form-control" />
                <span asp-validation-for="JokeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JokeAnswer" class="control-label"></label>
                <input asp-for="JokeAnswer" class="form-control" />
                <span asp-validation-for="JokeAnswer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateUser" class="control-label"></label>
                <select asp-for="CreateUser" aria-required="true" id="UserList" value="Id">
                    @foreach (var item in ViewBag.UserList)
                    {
                        <option value="@item.Text">@item.Text</option>
                    }
                </select> 
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
